# Launch On Los (LOL) - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Analos RPC URL (required)
RPC_URL=https://rpc.analos.io/

# Analos Explorer URL (required)
EXPLORER_URL=https://explorer.analos.io/

# Chain ID for Analos (optional, defaults to 'analos')
CHAIN_ID=analos

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Deployer wallet private key (base58 encoded) - REQUIRED
# Generate with: solana-keygen new --outfile deployer-keypair.json
# Then: cat deployer-keypair.json | jq -r '.secretKey | @base64'
WALLET_PRIVATE_KEY=your_deployer_wallet_private_key_here

# Fee collection wallet address (optional, defaults to deployer wallet)
FEE_WALLET=your_fee_collection_wallet_here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Bundlr Network URL for Arweave uploads
BUNDLR_NETWORK_URL=https://node1.bundlr.network

# Arweave wallet private key (base64 encoded) - OPTIONAL
# If not provided, will use mock storage for development
ARWEAVE_WALLET_PRIVATE_KEY=your_arweave_wallet_private_key_base64_encoded

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend port (default: 3001)
PORT=3001

# Node environment (development, production)
NODE_ENV=development

# CORS origin for frontend (default: http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for session management (required for production)
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data (required for production)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Frontend URL for production
NEXT_PUBLIC_APP_URL=https://launchonlos.com

# Backend URL for production
BACKEND_URL=https://api.launchonlos.com